<%- include blogheader %>
<%- include blogsubheader %>
<!-- CONTENT
================================================== -->
<div class="row" style="margin-top: 30px">
  <div class="twelve columns noleftmargin">
    
    <!-- MAIN CONTENT -->
    <div class="eight columns noleftmargin">
      
      <!-- 文章区显示 -->
      <% posts.forEach(function(post, index){ %>
      <div class="blog--post__context">
        <div class="circledate">
          <div class="textcircle">
            - <%= post.time.date.getDate() %>- <br/> <%= post.monthToStr %> <br/><%= post.time.year%>
          </div>
        </div>
        <a href="/p/<%= post._id %>" style="color: #390; font-size: 23px; font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;line-height: 2;"><%= post.title %></a>
        <!-- 分割线 -->
        <div class="dots blogdots"></div>
        <!-- 正文内容 -->
        <p>
        <% var tmpPost = post.post.toString().replace(/<[^>]+>/g,'').substring(0,200) %>
        <%= tmpPost %>... <a href="/p/<%= post._id %>" class="saymore">Read more</a>
        </p>
        <div class="hr"></div>
      </div>
      <% }) %>
      
      <!-- 分页区 暂时不做 留坑 -->
    </div>
    
    <!-- SIDEBAR -->
    <div class="four columns">
      
      <!-- About Me -->
      <div class = "index--about-me">
        <h6 class="index--sidebar-title">About Me</h6>
        <div id ="aboutContext">
          <div id="index--avatar-me">
            <img src="images/common/user-img.jpg" alt="user-image">
          </div>
          <p>Hello,I'm Yes sir popesama</p>
        </div>
      </div>
      <br class="clear"/>
      
      <!-- Tag part -->
      <div class="index--about-me">
        <h6 class="index--sidebar-title">ALL TAGS</h6>
        <% var tags = [] %>
        <% posts.forEach(function(post, index){ %>
          <% var perPost = posts[index] %>
          <% post.tags.forEach(function(tag, index){ %>
            <% if (tag) { %>
              <% if (tags.indexOf(tag) === -1) { %>
                <a class="tags" href="#"><%= tag %></a>
                <% tags.push(tag) %>
              <% } %>
            <% } %>
          <% }) %>
        <% }) %>
      </div>

      <br class="clear"/>
      <br/><br/>
      <!-- MOST POPULAR POST -->
      <div id="blog--popular">
        <div id="blog--popularpanel">
          <h6 class="index--sidebar-title">POPULAR POSTS</h6>
          <% popPosts.forEach(function(popPost, index){ %>
          <% if (index < 4) { %>
          <div style="line-hight: 30px; padding-top:10px; padding-left: 20px; padding-bottom: 10px"><%= index+1 %>&nbsp&nbsp&nbsp<a href="/p/<%= popPost._id %>"><%= popPosts[index].title %>&nbsp&nbsp&nbsp</a><%= popPosts[index].name %>&nbsp&nbsp&nbsp<%= popPosts[index].time.day %></div>
          <% } %>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="hr">
</div>
<%- include blogfooter %>